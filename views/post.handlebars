
<div class="text">
	<div class="container blogBoxCont">
		<div class="row headerRow">
			<div class="col-8">
				<h2 class="blogTitle text-uppercase">{{name}}</h2>
			</div>
			<div class="col-4">
				<p class="blogCreate text-right">Created by {{user.name}} on {{format_date date}}</p>
			</div>
		</div>
		<p class="text-center blogDescTwo">{{description}}</p>
		</div>	
</div>

		{{#if logged_in}}

		<form class="comment-form formCont d-flex flex-wrap justify-content-center" post-id={{id}}>
			<div class="textAreaCont p-2">
				<textarea id='comment-text' name="comment-body"
				placeholder="Add comment here!"
				cols="30"
				rows="2"></textarea>
			</div>
			<div class="btnComment p-2">
				<button class="button btn btn-success" type="submit">Add Comment</button>
			</div>
		</form>

		{{/if}}

		<h2 class="text-center">Comments</h2>
		{{#each comments as |comment|}}
		<div class="commentCont">
			<p class="text-center commentText">{{comment.comment_text}}</p>
			<p class="text-center commentOwner">{{comment.user.name}} {{format_date date_created}}</p>
		</div>
		{{/each}}

		<script src="/js/comments.js"></script>